= form_with(model: model, url: board_tasks_path(model.board), local: true) do |f|
  %div
    = f.label :eyecatch, 'アイキャッチ'
  %div 
    = f.file_field :eyecatch
  %div
    = f.label :name, 'Name', class: 'label'
  %div
    = f.text_field :name, class: 'text'
  %div
    = f.label :description, 'Description', class: 'label'
  %div
    = f.text_area :description, class: 'text text-area'
  = f.submit 'Submit', class: 'btn-primary'