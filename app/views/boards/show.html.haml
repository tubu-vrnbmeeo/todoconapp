.container
  %h2.title= @board.name
  - @tasks.each do |task|
    = link_to board_path(task) do
      .card
        .card-name.card-name-task
          = task.name
        .card-description
          = task.description

        = image_tag 'Users.png', class: 'card-avatar'

  = link_to new_board_task_path(@board) do
    .new-card
      %p.new-card-add + Add new card